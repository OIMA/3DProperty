<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="false" />
    <constant name="struts.configuration.xml.reload" value="true" />
    <package name="global" extends="struts-default">
        
        <action name="buscarPorCategoria" class="Navegacion" method="index">
            <result>/roles/UsuarioGeneral/PorCategoria.jsp</result>
        </action>
<!--        Aciones para Pago _________________________________________________________________    -->
        <action name="pagoAdmin" class="Pago" method="consultaPagos">
            <!--name la accion, class la accion declarada en struts, method el metodo de la clase en java-->
            <result>/Formulario/PagosAdmin.jsp</result>
        </action>
        <action name="guardarPago" class="Pago" method="guardaPago">
            <result type="redirectAction">pagoAdmin</result>
        </action>
        <action name="eliminarPago" class="Pago" method="eliminarPago">
            <result type="redirectAction">pagoAdmin</result>
        </action>
        <action name="consultaPago" class="Pago" method="consultaPago">
            <result>/Formulario/PagosAdmin.jsp</result>
        </action>
        <action name="editarPago" class="Pago" method="editarPago">
            <result type="redirectAction">pagoAdmin</result>
        </action>
<!--        Para login-->
        <action name="Login" class="Navegacion" method="index">
            <result>index.jsp</result>
        </action>
         <action name="Hogar" class="Navegacion" method="index">
            <result>/General/Hogar.jsp</result>
        </action>
         <action name="Turismo" class="Navegacion" method="index">
            <result>/General/Turismo.jsp</result>
        </action>
         <action name="Historia" class="ControlSesion" method="mostrarJSP">
             <result>/General/Hogar.jsp</result>
            <result name="errorUsuario">/General/Historia.jsp</result>
            <result name="roleAdmin">index.jsp</result>
            <result name="roleUsuario">index.jsp</result>
        </action>
         <action name="IndexError" class="Navegacion" method="index">
            <result>indexError.jsp</result>
        </action>
        <action name="Index" class="Navegacion" method="index">
            <result>index.jsp</result>
        </action>
        <action name="Examen" class="Navegacion" method="index">
            <result>/test/examen.jsp</result>
        </action>
<!--        <action name="Index" class="Navegacion" method="index">
            <result>index.jsp</result>
        </action>-->
    </package>
    <package name="tablaCatalogoFotos" extends="struts-default"></package>
    <package name="tablaCategoria" extends="struts-default"></package>
    <package name="tablaCodigoPostal" extends="struts-default"></package>
    <package name="tablaColonia" extends="struts-default"></package>
    <package name="tablaContrato" extends="struts-default"></package>
    <package name="tablaDiseniadorPropiedad" extends="struts-default"></package>
    <package name="tablaDisenio" extends="struts-default"></package>
    <package name="tablaEstado" extends="struts-default, json-default">
        <action name="Estado" class="Estado" method="consultarPaises">
            <result>/test/FormularioEstado.jsp</result>
        </action>
        <action name="InsertarEstado" class="Estado" method="guardar">
            <result>/test/FormularioEstado.jsp</result>
        </action>
        <action name="ConsultarEstados" class="Estado" method="consultarTodos">
            <result>/test/ConsultarEstados.jsp</result>
        </action>
        <action name="EliminarEstado" class="Estado" method="eliminar">
            <result type="json"></result>
        </action>
    </package>
    <package name="tablaFavorito" extends="struts-default"></package>
    <package name="tablaHistorial" extends="struts-default"></package>
    <package name="tablaLocalidad" extends="struts-default"></package>
    <package name="tablaMensaje" extends="struts-default"></package>
    <package name="tablaPago" extends="struts-default"></package>
    <package name="tablaPais" extends="struts-default">
        <action name="Pais" class="Navegacion" method="index">
            <result>/test/FormularioPais.jsp</result>
        </action>
        <action name="InsertarPais" class="Pais" method="guardar">
            <result>/test/FormularioPais.jsp</result>
        </action>
    </package>
    <package name="tablaPropiedad" extends="struts-default"></package>
    <package name="tablaRegistroPago" extends="struts-default"></package>
    <package name="tablaUsuario" extends="struts-default">
        <action name="Registro" class="Pais" method="consultarTodos">
            <result>/roles/UsuarioGeneral/Registro.jsp</result>
        </action>
            
    </package>

</struts>